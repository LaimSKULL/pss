<% projects.forEach(project => { %>
  <div class="col-md-12">
    <div class="project-card d-flex flex-column">
      <div class="row">
        <div class="col-md-3 d-flex justify-content-center align-items-center">
          <img src="<%= project.image %>" alt="Project Image" class="img-fluid project-image">
        </div>
        <div class="col-md-9">
          <div class="d-flex justify-content-between align-items-center">
            <p class="project-category mb-2 text-muted"><%= project.category %></p>
            <div class="project-status"><%= project.status %></div>
          </div>
          <h5 class="project-title mb-3"><%= project.title %></h5>
          <p class="project-description"><%= project.description %></p>
          <div class="mt-auto">
            <div class="row">
              <div class="col-md-6">
                <p class="project-dates">
                  <i class="far fa-calendar-alt icon"></i><%= project.dates %>
                </p>
              </div>
              <div class="col-md-6">
                <div class="d-flex justify-content-end align-items-end">
                  <p class="participants m-0">
                    <i class="fas fa-users icon"></i><%= project.participants %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% }); %>