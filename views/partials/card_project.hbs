{{#each projects}}
    <div class="card mb-4">
        <div class="row no-gutters">
            <div class="col-md-3 d-flex align-items-center justify-content-center">
                <img src="/img/dev.svg" alt="Project Image" class="img-fluid rounded project-image">
            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <p class="mb-0 text-muted">{{this.Category.name}}</p>
                        <h5 class="project-status"><span class="badge badge-success">{{this.status}}</span></h5>
                    </div>
                    <h4 class="card-title">{{this.name}}</h4>
                    <p class="card-text">{{this.briefDescription}}</p>
                    <div class="mt-3">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="card-text">
                                    <i class="far fa-calendar-alt mr-2"></i>{{this.startDate}} - {{this.endDate}}
                                </p>
                            </div>
                            <div class="col-md-6 d-flex justify-content-end">
                                <p class="card-text">
                                    <i class="fas fa-users mr-2"></i>{{this.userCount}}/{{this.max_user}} участников
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/each}}
